<div class="container">
    <div class="row justify-content-center">
        <div class="col-6 text-center">
            <h1>Hello This is for Burgers</h1>
        </div>
    </div>

</div>


<div class="container">
    <div class="border border-info m-1">
        <div class="row justify-content-center mt-2">
            <h2>Order a Burger!</h2>
        </div>
        <div class="row justify-content-center mb-3">
            <div class="col-8 text-center">
                <form id="add-new-burger">
                    <div class="form-group mb-1">
                        <input type="text" id="new-burger" name="name" class="form-control"
                            placeholder="Enter a burger!">
                    </div>
                    <button type="submit" class="btn btn-success">Submit Order!</button>
                </form>
            </div>
        </div>
    </div>

    <div class="row justify-content-center mt-2">
        <div class="col-5 text-center border border-primary m-1">
            <h2>Ordered Burgers!</h2>
            <div class="row justify-content-center">
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devoured=false}}
                {{/unless}}
                {{/each}}
            </div>

        </div>
        <div class="col-5 text-center border border-success m-1">
            <h2>Devoured Burgers!</h2>
            <div class="row justify-content-center">
                {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burger-block devoured=true}}
                {{/if}}
                {{/each}}
            </div>
        </div>
    </div>